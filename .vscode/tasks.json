{
    "tasks": [
        // Packaging related commands
        { // Create package without namespace
            "label": "SFDX package: Create Package w/o namespace",
            "type": "shell",
            "command": "sfdx",
            "args": [
                "force:package:create",
                "--name",
                "${input:packageName}",
                "--description",
                "${input:packageDescription}",
                "--packagetype",
                "${input:packageType}",
                "--nonamespace",
                "--path",
                "${input:path}"
            ],
            "group": "build",
            "problemMatcher" : [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        { // Create package with namespace
            "label": "SFDX package: Create Package with namespace",
            "type": "shell",
            "command": "sfdx",
            "args": [
                "force:package:create",
                "--name",
                "${input:packageName}",
                "--description",
                "${input:packageDescription}",
                "--packagetype",
                "${input:packageType}",
                "--path",
                "${input:path}"
            ],
            "group": "build",
            "problemMatcher" : [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        { // Package version with Id
            "label": "SFDX Package: Create Package version",
            "type": "shell",
            "command": "sfdx",
            "args": [
                "force:package:version:create",
                "--package",
                "${input:packageId}",
                "--wait",
                "20",
                "--installationkeybypass",
                "--codecoverage"
            ],
            "group": "build",
            "problemMatcher" : [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        { // Release package version via Id
            "label": "SFDX Package: Release Package version",
            "type": "shell",
            "command": "sfdx",
            "args": [
                "force:package:version:promote",
                "--package",
                "${input:packageVersionId}"
            ],
            "group": "build",
            "problemMatcher" : [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        { // Delete package version
