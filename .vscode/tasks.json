        // Utility functions
        { // Open Developer Console
            "label": "SFDX: Open Developer Console",
            "type": "shell",
            "command": "sfdx",
            "args": [
                "force:org:open",
                "-p",
                "/_ui/common/apex/debug/ApexCSIPage"
            ],
            "group": "build",
            "problemMatcher" : [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ],
    "inputs": [
        {
            "id" : "packageName",
            "description": "Enter package name",
            "type": "promptString",
        },
        {
            "id" : "path",
            "description": "Enter folder path",
            "type": "promptString",
            "default": "force-app"
        },
        {
            "id": "packageDescription",
            "description": "Enter description",
            "type": "promptString"
        },
        {
            "id": "packageNameSpace",
            "description": "Package Namespace",
            "type": "promptString"
        },
        {
            "id" : "packageId",
            "description": "Enter Package ID",
            "type": "promptString",
            //"default": "${selectedText}"
        },
        {
            "id" : "packageVersionId",
            "description": "Enter Package Version ID",
            "type": "promptString"
        },
        {
            "id": "packageType",
            "description": "Select Package Type",
            "type" :"pickString",
            "options": [
                "Managed","Unlocked"
            ],
            "default": "Unlocked"
        },
        {
            "id" : "changeSetName",
            "description": "Enter Change Set name",
            "type": "promptString",
        },
        {
            "id": "manifestPath",
            "description": "Enter Package XML Path",
            "type": "promptString",
            //"default": "${fileWorkspaceFolder}"
        },
        {
            "id" : "waitTime",
            "description": "Enter Wait Time(in minutes)",
            "type": "promptString",
            "default": "5"
        },
        {
            "id" : "packageRequestId",
            "description": "Enter Package Request ID",
            "type": "promptString"
        }
    ]
}