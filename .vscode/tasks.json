            "command": "sfdx",
            "args": [
                "force:package:version:list",
                "--packages",
                "${input:packageId}"
            ],
            "group": "build",
            "problemMatcher" : [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        { // Check Package Version Status
            "label": "SFDX Package: Check Package version Status",
            "type": "shell",
            "command": "sfdx",
            "args": [
                "force:package:version:create:report",
                "-i",
                "${input:packageRequestId}"
            ],
            "group": "build",
            "problemMatcher" : [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
