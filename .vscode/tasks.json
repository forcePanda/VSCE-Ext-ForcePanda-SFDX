        },
        { // Delete package
            "label": "SFDX Package: Delete Package",
            "type": "shell",
            "command": "sfdx",
            "args": [
                "force:package:delete",
                "--package",
                "${input:packageId}"
            ],
            "group": "build",
            "problemMatcher" : [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        { // List all packages
            "label": "SFDX Package: Get all packages",
            "type": "shell",
            "command": "sfdx",
            "args": [
                "force:package:list"
            ],
            "group": "build",
            "problemMatcher" : [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
