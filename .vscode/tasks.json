        // Change Set related commands
        { // Get Deployment status
            "label": "SFDX: Get Deployment Status",
            "type": "shell",
            "command": "sfdx",
            "args": [
                "force:mdapi:deploy:report"
            ],
            "group": "build",
            "problemMatcher" : [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        { // Retrieve Change Set 
            "label": "SFDX: Retrieve Change Set",
            "type": "shell",
            "command": "sfdx",
            "args": [
                "force:source:retrieve",
